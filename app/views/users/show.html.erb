<div class="main user-show">
  <div class="container">
    <div class="user">
      <!-- 以下で、ユーザーの画像を出力していて、その画像のURLを指定している -->
      <img src="<%= "/user_images/#{@user.image_name}" %>">
      <!-- 以下で、ユーザー名を出力している -->
      <h2><%= @user.name %></h2>
      <!-- 以下で、メールアドレスを出力している -->
      <p><%= @user.email %></p>
      <!--編集しようとしているユーザーのidとログインしているユーザーのidが等しい場合のみ編集リンクを表示する-->
      <% if @user.id == @current_user.id %>
        <!-- 以下で、ユーザー情報の編集ページへのリンクを設定している -->
      <%= link_to("編集", "/users/#{@user.id}/edit") %>
      <% end %>
    </div>

    <ul class="user-tabs">
      <li class="active"><%= link_to("投稿", "/users/#{@user.id}") %></li>
      <li><%= link_to("いいね!", "/users/#{@user.id}/likes") %></li>
    </ul>





      <!--以下で、userモデルに定義したpostsメソッドを用いて、そのユーザーが投稿した投稿を全て取得している-->
    <% @user.posts.each do |post| %>
      <div class="posts-index-item">
        <div class="post-left">
          <!-- 以下で、ユーザーの画像を出力していて、その画像のURLを指定している -->
          <img src="<%= "/user_images/#{post.user.image_name}" %>">
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <!-- 以下で、ユーザー詳細ページへのリンクを設定している -->
            <%= link_to(post.user.name, "/users/#{post.user.id}") %>
          </div>
          <!-- 以下で、投稿の内容を出力している -->
          <%= link_to(post.content, "/posts/#{post.id}") %>
        </div>
      </div>
    <% end %>
  </div>
</div>