<div class="main user-show">
  <div class="container">
    <div class="user">
      <!-- 以下で、ユーザー名を出力している -->
      <h2><%= @user.name %></h2>
      <!-- 以下で、メールアドレスを出力している -->
      <p><%= @user.email %></p>
        <!-- 以下で、ユーザー情報の編集ページへのリンクを設定している -->
      <%= link_to("編集", "/users/#{@user.id}/edit") %>
    </div>
  </div>
</div>